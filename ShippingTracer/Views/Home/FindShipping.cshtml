@model ShippingTracer.Data.Shipping

@{
    ViewData["Title"] = "Antsipirihan'ny entana";
}

<h1>Ny antsipirihany:</h1>

<div>
    <h4>@Html.DisplayFor(model => model.UniqueId)</h4>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UniqueId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UniqueId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShippingStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShippingStatus.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DepartureDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DepartureDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EstimatedDeliveryDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EstimatedDeliveryDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)
                </dd>
            </dl>
        </div>
        <div class="col-sm-6">
            <h3>Infos: </h3>
            @if (Model.ShippingInfos == null)
            {
                <p><span>NO INFORMATION</span></p>
            }
            else
            {
                @foreach (var item in Model.ShippingInfos)
                {
                    <p><span>@item.CreatedAt</span> - @item.Content</p>
                }
            }
        </div>
    </div>
    
</div>
<div>
    <a asp-action="Index">Hiverina</a>
</div>
